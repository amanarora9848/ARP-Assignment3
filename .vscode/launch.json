    "version": "0.2.0",
    "configurations": [

        {
            "name": "Process A Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/processA",
            "args": ["2", "4000", "192.168.101.100"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },

